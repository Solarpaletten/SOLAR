        { icon: "ğŸ”„", title: "Movements", route: "/warehouse/movements" },
      ]
    },
    {
      icon: "ğŸ’°",
      title: "Sales", 
      route: "/sales",
      expandable: true,
      subItems: [
        { icon: "ğŸ’³", title: "New Sale", route: "/sales/new" },
        { icon: "ğŸ“‹", title: "Orders", route: "/sales/orders" },
        { icon: "ğŸ“Š", title: "Analytics", route: "/sales/analytics" },
      ]
    },
    {
      icon: "ğŸ›’",
      title: "Purchases",
      route: "/purchases", 
      expandable: true,
      subItems: [
        { icon: "â•", title: "New Purchase", route: "/purchases/new" },
        { icon: "ğŸ“‹", title: "Orders", route: "/purchases/orders" },
        { icon: "ğŸ‘¥", title: "Suppliers", route: "/purchases/suppliers" },
      ]
    },
    { 
      icon: "âš¡", 
      title: "TAB-Ğ‘ÑƒÑ…Ğ³Ğ°Ğ»Ñ‚ĞµÑ€Ğ¸Ñ", 
      route: "/tabbook",
      badge: "NEW"
    },
    { 
      icon: "â˜ï¸", 
      title: "Cloud IDE", 
      route: "/cloudide",
      badge: "BETA"
    },
    { 
      icon: "âš™ï¸", 
      title: "Settings", 
      route: "/settings", 
      isPinned: true 
    }
  ];

  const holiday = getFamilyHoliday();

