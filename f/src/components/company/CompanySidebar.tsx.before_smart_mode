  const getFamilyHoliday = () => {
    const today = new Date();
    const month = today.getMonth() + 1;
    const day = today.getDate();
    
    if (month === 3 && day === 8) return "ğŸŒ¸ 8 ĞœĞ°Ñ€Ñ‚Ğ° - Ğ”ĞµĞ½ÑŒ Ğ¶ĞµĞ½Ñ‰Ğ¸Ğ½!";
    if (month === 6 && day === 16) return "ğŸ‘¨â€ğŸ‘§â€ğŸ‘¦ Ğ”ĞµĞ½ÑŒ Ğ¾Ñ‚Ñ†Ğ° Ğ² Ğ“ĞµÑ€Ğ¼Ğ°Ğ½Ğ¸Ğ¸!";
    if (month === 12 && day >= 24 && day <= 26) return "ğŸ„ Ğ Ğ¾Ğ¶Ğ´ĞµÑÑ‚Ğ²Ğ¾ ÑĞµĞ¼ÑŒĞ¸!";
    if (month === 1 && day === 1) return "ğŸŠ ĞĞ¾Ğ²Ñ‹Ğ¹ Ğ³Ğ¾Ğ´ ÑĞµĞ¼ÑŒĞ¸!";
